{
  "appId": "com.mohamed-mdj.resource-monitor",
  "productName": "Resource Monitor",
  "copyright": "Copyright Â© 2025 Mohamed MDJ",
  "files": ["dist-electron", "dist-react", "app.png"],
  "extraResources": [
    {
      "from": "src/assets",
      "to": "src/assets"
    }
  ],
  "mac": {
    "target": ["dmg"],
    "icon": "./app.ico",
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "./app.png"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "./app.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortbook": true,
    "createStartMenuShortcut": true
  }
}
