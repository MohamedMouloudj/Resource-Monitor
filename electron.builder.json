{
  "appId": "com.mohamed-mdj.resource-monitor",
  "productName": "Resource Monitor",
  "description": "System resource monitoring application",
  "author": "Mohamed Mouloudj",
  "copyright": "Copyright Â© 2025 Mohamed MDJ",
  "files": ["dist-electron", "dist-react", "app.png"],
  "extraResources": [
    {
      "from": "src/assets",
      "to": "src/assets"
    }
  ],
  "mac": {
    "target": ["dmg"],
    "icon": "./app.png",
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "./app.ico"
  },
  "linux": {
    "target": ["deb"],
    "icon": "./app.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": {
    "provider": "github",
    "owner": "mohamed-mdj",
    "repo": "resource-monitor"
  }
}
